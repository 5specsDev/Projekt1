<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.fivespecsdev.schoolapp.start">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/BtnStartCal"
        android:layout_below="@+id/ChClassSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/calendar1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/BtnStartFolder"
        android:layout_toEndOf="@+id/BtnStartCal"
        android:background="@drawable/folder1"
        android:layout_alignTop="@+id/BtnStartCal"
        android:layout_toRightOf="@+id/BtnStartCal"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/BtnStartBook"
        android:layout_toEndOf="@+id/BtnStartFolder"
        android:layout_marginLeft="50dp"
        android:background="@drawable/book1"
        android:layout_alignTop="@+id/BtnStartFolder"
        android:layout_toRightOf="@+id/BtnStartFolder" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Access"
        android:id="@+id/BtnAdminAccess"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPMSG"
        android:id="@+id/BtnStartIPMSG"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
